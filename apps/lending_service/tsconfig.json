{
  "compilerOptions": {
    "target": "ES6",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
  },
  "include": [
    "src/**/*",
  ],
  "exclude": ["node_modules"],
  "types": ["node"]
}